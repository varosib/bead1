<div class="page-header">
    <h1>Bejelentkezés</h1>
</div>

<form class="form-horizontal" method="post" action="/auth/login">
    <fieldset>
        <div class="form-group">
            <label for="azon" class="col-lg-2 control-label">Felhasználónév</label>
            <div class="col-lg-10">
                <input class="form-control" id="azon" name="azon" type="text" value="{{data.azon}}">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
                <input class="form-control" type="password" id="password" name="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">Bejelentkezés</button>
            </div>
        </div>
    </fieldset>
</form>

<div class="list-group">
  <a href="/auth/signup" class="list-group-item">
    Regisztráció
  </a>
</div>